<section class='col-sm-8 col-sm-offset-2'>

  <div class="text-center">
  <p>Tonight, you are having:</p>

  <h1><%= @cuisine %></h2>

  <p>Be thankful.</p>

  <p>
    Also, here are some restaurants tagged
    <span><%= @cuisine %></span>
    in your area:
  </p>
  </div>

  <div class='row'>
    <% @businesses.each do |business| %>
      <div class='col-sm-6 col-lg-3'>
        <%= business.name %>
        <p>Coords: <%= business.coords[:lat] %> <%= business.coords[:lng] %></p>
      </div>
    <% end %>
  </div>

  <script type="text/javascript">
  new GMaps({
    div: '#map',
    lat: -12.043333,
    lng: -77.028333
  });
  </script>
</section>