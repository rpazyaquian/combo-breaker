<%= form_for @search_form, url: search_path, html: { class: 'form-horizontal' }, role: 'form' do |f| %>

  <div class="form-group">

    <div class="col-sm-3">
      <%= f.label :location, "What's your current location?" %>
    </div>

    <div class='col-sm-9'>
      <%= f.text_field :location, class: 'form-control'%>
    </div>

  </div>

  <div class='form-group'>

    <div class="col-sm-3">
      <%= f.label :cuisine, "What did you have for your last meal?" %>
    </div>

    <div class='col-sm-3'>
      <%= f.select :cuisine, options_for_select(@cuisine_options), {}, { class: 'form-control' } %>
    </div>

  </div>

  <div class='form-group'>

    <div class='col-sm-3'>
      <%= f.label :cuisine, "How far out do you want to search?" %>
    </div>

    <div class='form-group col-sm-9'>

      <div class='col-sm-6'>
      <%= f.number_field :radius_distance, class: 'form-control', value: 1 %>
      </div>

      <div class='col-sm-6'>
      <%= f.select :radius_units, options_for_select(@distance_units), {}, { class: 'form-control' } %>
      </div>

    </div>

  </div>

  <%= f.submit "I'm hungry!", class: 'btn btn-default'%>

<% end %>