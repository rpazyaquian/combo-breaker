<h1>Sign in</h1>

<%= form_for(:session, url: login_path, class: 'signin-form') do |f| %>

  <div class="email-form">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="password-form">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <%= f.submit "Sign in", class: 'signin-button' %>
<% end %>